<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="android.view.View"/>

        <variable
            name="viewmodel"
            type="com.sunny.mvvmbilibili.ui.base.BaseViewModel"/>
    </data>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:drawablePadding="@dimen/empty_content_padding"
        android:drawableTop="@{viewmodel.contentEmptyImg}"
        android:gravity="center"
        android:text="@{viewmodel.contentEmptyHint}"
        android:textColor="@color/text_color_desc"
        android:textSize="@dimen/text_small_body"
        android:visibility="@{viewmodel.isShowContentEmpty ? View.VISIBLE : View.GONE}"/>

</layout>