<resources>

    <style name="BilibiliTheme" parent="BilibiliTheme.Base"/>

    <style name="BilibiliTheme.Base" parent="BilibiliTheme.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="BilibiliTheme.NoActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/window_background</item>
    </style>

    <style name="BilibiliTheme.Fullscreen">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="BilibiliTheme.Translucent">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="BilibiliTheme.Transparent">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style name="BilibiliTheme.TransparentStatus">
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <!--离线缓存ProgressBar-->
    <style name="BilibiliTheme.NumberProgressBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="progress_max">100</item>
        <item name="progress_current">0</item>
        <item name="progress_unreached_color">@color/disabled</item>
        <item name="progress_reached_color">@color/primary</item>
        <item name="progress_text_size">10sp</item>
        <item name="progress_text_color">@color/accent</item>
        <item name="progress_reached_bar_height">20dp</item>
        <item name="progress_unreached_bar_height">20dp</item>
    </style>

    <!-- 番剧索引TextView -->
    <style name="BilibiliTheme.Bangumi_TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">@dimen/bangumi_footer_horizontal_margin</item>
        <item name="android:padding">@dimen/bangumi_footer_padding</item>
        <item name="android:drawablePadding">@dimen/bangumi_footer_padding</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_body</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
